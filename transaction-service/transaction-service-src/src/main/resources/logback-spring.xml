<configuration>
    <property name="SERVICE_NAME" value="transaction-service"/>
    <property name="LOGS_BASE" value="/logs"/>

    <appender name="RollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS_BASE}/${SERVICE_NAME}/current/${SERVICE_NAME}.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOGS_BASE}/${SERVICE_NAME}/%d{yyyy-MM-dd}/%d{HH}-${SERVICE_NAME}.log</fileNamePattern>
            <maxHistory>720</maxHistory>
            <totalSizeCap>50GB</totalSizeCap>
        </rollingPolicy>

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>

        <prudent>false</prudent>
    </appender>

    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="RollingFile"/>
        <appender-ref ref="Console"/>
    </root>

    <logger name="org.springframework.boot.autoconfigure" level="WARN"/>
    <logger name="org.springframework.cloud" level="WARN"/>
</configuration>
